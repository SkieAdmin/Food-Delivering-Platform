<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> | GoCotano</title>
  <link rel="stylesheet" href="/css/style.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
</head>
<body class="auth-page">
  <!-- Back to Home Button -->
  <a href="/" class="auth-back-btn">
    <span class="back-icon">â†</span>
    <span class="back-text">Back to Home</span>
  </a>

  <div class="auth-container">
    <!-- Left Side - Welcome Section -->
    <div class="auth-welcome-section">
      <div class="auth-welcome-content">
        <div class="welcome-icon">ğŸ”</div>
        <h1 class="welcome-title">Welcome Back to GoCotano</h1>
        <p class="welcome-subtitle">
          Your favorite food delivery platform
        </p>
        <div class="welcome-features">
          <div class="welcome-feature">
            <span class="feature-icon-auth">âš¡</span>
            <span>Fast Delivery</span>
          </div>
          <div class="welcome-feature">
            <span class="feature-icon-auth">ğŸ”’</span>
            <span>Secure & Safe</span>
          </div>
          <div class="welcome-feature">
            <span class="feature-icon-auth">ğŸ“</span>
            <span>Real-time Tracking</span>
          </div>
        </div>
        <div class="welcome-stats">
          <div class="stat-box">
            <div class="stat-value">50K+</div>
            <div class="stat-label">Happy Customers</div>
          </div>
          <div class="stat-box">
            <div class="stat-value">200+</div>
            <div class="stat-label">Restaurants</div>
          </div>
          <div class="stat-box">
            <div class="stat-value">4.8â˜…</div>
            <div class="stat-label">Rating</div>
          </div>
        </div>
      </div>
      <div class="auth-welcome-overlay"></div>
    </div>

    <!-- Right Side - Login Form -->
    <div class="auth-form-section">
      <div class="auth-form-container">
        <div class="auth-form-header">
          <h2 class="auth-title">Sign In</h2>
          <p class="auth-subtitle">Enter your credentials to access your account</p>
        </div>

        <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
          <div class="alert-modern alert-error-modern">
            <span class="alert-icon">âš ï¸</span>
            <span class="alert-message"><%= error %></span>
          </div>
        <% } %>

        <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
          <div class="alert-modern alert-success-modern">
            <span class="alert-icon">âœ“</span>
            <span class="alert-message"><%= success %></span>
          </div>
        <% } %>

        <% if (returnTo) { %>
          <div class="alert-modern alert-info-modern">
            <span class="alert-icon">ğŸ›’</span>
            <span class="alert-message">Your cart is saved! Log in to complete your order.</span>
          </div>
        <% } %>

        <form action="/login<%= returnTo ? '?returnTo=' + encodeURIComponent(returnTo) : '' %>" method="POST" class="auth-form">
          <div class="form-group-modern">
            <label for="email" class="form-label-modern">Email Address</label>
            <div class="input-with-icon">
              <span class="input-icon">ğŸ“§</span>
              <input
                type="email"
                id="email"
                name="email"
                class="form-control-modern"
                required
                placeholder="your@email.com"
                autocomplete="email"
              >
            </div>
          </div>

          <div class="form-group-modern">
            <label for="password" class="form-label-modern">Password</label>
            <div class="input-with-icon">
              <span class="input-icon">ğŸ”’</span>
              <input
                type="password"
                id="password"
                name="password"
                class="form-control-modern"
                required
                placeholder="Enter your password"
                autocomplete="current-password"
              >
              <button type="button" class="password-toggle" onclick="togglePassword('password')">
                <span id="password-toggle-icon">ğŸ‘ï¸</span>
              </button>
            </div>
          </div>

          <div class="form-options">
            <label class="checkbox-container">
              <input type="checkbox" name="remember" id="remember">
              <span class="checkbox-label">Remember me</span>
            </label>
          </div>

          <button type="submit" class="btn-auth-primary">
            <span>Sign In</span>
            <span class="btn-arrow-auth">â†’</span>
          </button>
        </form>

        <p class="auth-footer-text">
          Don't have an account?
          <a href="/register" class="auth-link">Sign Up Now</a>
        </p>

        <div class="role-selection-hint">
          <p class="hint-text">ğŸ’¡ Looking for a different portal?</p>
          <div class="role-links">
            <a href="/register?role=RESTAURANT" class="role-link">Restaurant Owner</a>
            <span class="role-separator">â€¢</span>
            <a href="/register?role=DRIVER" class="role-link">Delivery Driver</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function togglePassword(inputId) {
      const input = document.getElementById(inputId);
      const icon = document.getElementById(inputId + '-toggle-icon');

      if (input.type === 'password') {
        input.type = 'text';
        icon.textContent = 'ğŸ™ˆ';
      } else {
        input.type = 'password';
        icon.textContent = 'ğŸ‘ï¸';
      }
    }

    // Auto-hide alerts after 5 seconds
    setTimeout(() => {
      const alerts = document.querySelectorAll('.alert-modern');
      alerts.forEach(alert => {
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 300);
      });
    }, 5000);
  </script>
</body>
</html>
